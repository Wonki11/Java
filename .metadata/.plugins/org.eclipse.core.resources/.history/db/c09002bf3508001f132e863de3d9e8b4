package com.kh.goodsShop;

import java.util.*;

public class 컴퓨터가게 {
	public static void main(String[] args) {
		//모든제품 HashMap
		Map<String,Integer> 아이템 = new HashMap<>();
		
		//노트북 700000
		//데스크탑 20000
		//모니터 5000
		//마우스 3000
		//키보드 2000
		아이템.put("노트북", 700000);
		아이템.put("데스크탑", 20000);
		아이템.put("모니터", 5000);
		아이템.put("마우스", 3000);
		아이템.put("키보드", 2000);
		
		
		System.out.println("컴퓨터 상품 목록");
		
		//Entry 사용해서 출력 
		
		for(Map.Entry<String, Integer> e : 아이템.entrySet()) {
			String 제품 = e.getKey();
			int 가격 = e.getValue();
			System.out.println(제품 + " 의 가격은 " + 가격 + "입니다");
		}
	}
}
